<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mytijian.mediator.common.DAO.HeartbeatLogMapper">

	<resultMap id="HeartbeatLogMap" type="com.mytijian.mediator.api.model.HeartbeatLog">
		<id property="id" column="id"/>
		<result property="period" column="period" />
		<result property="hospitalId" column="hospital_id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<insert id="insert" parameterType="com.mytijian.mediator.api.model.HeartbeatLog">
		<selectKey keyProperty="id" resultType="int" order="BEFORE">
         	select nextval('tb_heartbeat_log_seq')
     	</selectKey>
     	insert into tb_heartbeat_log(id,period,hospital_id,create_time,update_time)
     	values(#{id},#{period},#{hospitalId},NOW(),NOW())
	</insert>
	
	
	<select id="getByHospitalId" resultMap="HeartbeatLogMap" parameterType="Integer">
		select id,period,hospital_id,create_time,update_time
		from tb_heartbeat_log where hospital_id = #{hospitalId} 
		ORDER BY create_time DESC LIMIT 1
	</select>
	
	<delete id="delete" parameterType="Integer">
		delete from tb_heartbeat_log where id = #{id}
	</delete>

</mapper>